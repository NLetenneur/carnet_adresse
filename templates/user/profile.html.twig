{# templates/user/profile.html.twig #}
<h1>Gestion de votre profil</h1>

<form method="post" action="{{ path('user_profile_update') }}">
    <div>
        <label for="nom">Nom :</label>
        <input type="text" id="nom" name="nom" value="{{ app.user.nom }}">
    </div>
    <div>
        <label for="prenom">Prénom :</label>
        <input type="text" id="prenom" name="prenom" value="{{ app.user.prenom }}">
    </div>
    <div>
        <label for="email">Email :</label>
        <input type="email" id="email" name="email" value="{{ app.user.email }}">
    </div>
    <div>
        <label for="telephone">Téléphone :</label>
        <input type="text" id="telephone" name="telephone" value="{{ app.user.telephone }}">
    </div>
    <button type="submit">Mettre à jour</button>
</form>
